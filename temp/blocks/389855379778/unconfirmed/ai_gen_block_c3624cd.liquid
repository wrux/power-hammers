{% doc %}
  @prompt
    Black hero with the following image as a cover background: https://cdn.shopify.com/s/files/1/0788/3338/5794/files/powerhammers_hero.svg?v=1762189737
    
    It should have big bold text over with the title "PowerHammers", 
    below the text "The Original.
    Since 1987."
    And a CTA to the all products page
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.hero_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #000000;
    overflow: hidden;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    line-height: 1.1;
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
  }

  .ai-hero-tagline-{{ ai_gen_id }} {
    font-size: {{ block.settings.tagline_size }}px;
    color: {{ block.settings.tagline_color }};
    margin: 0 0 {{ block.settings.button_spacing }}px;
    line-height: 1.4;
    white-space: pre-line;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-hero-{{ ai_gen_id }} {
      min-height: {{ block.settings.hero_height | times: 0.7 }}px;
    }

    .ai-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.6 }}px;
    }

    .ai-hero-tagline-{{ ai_gen_id }} {
      font-size: {{ block.settings.tagline_size | times: 0.8 }}px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image }}"
        alt="{{ block.settings.title }}"
        loading="eager"
      >
    {% endif %}
  </div>

  <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-hero-content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h1 class="ai-hero-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}

    {% if block.settings.tagline != blank %}
      <p class="ai-hero-tagline-{{ ai_gen_id }}">{{ block.settings.tagline }}</p>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

